<%- include('partials/header') %>
 <main style="margin-left: 200px; padding: 2rem;">
<div class="container">
  <h1>Film bewerken: <%= movie.name %></h1>

  <form action="/movies/<%= movie.id %>/edit" method="POST" class="edit-form">

    <label for="name">Naam:</label>
    <input type="text" id="name" name="name" value="<%= movie.name %>" required />

    <label for="releaseYear">Releasejaar:</label>
    <input type="number" id="releaseYear" name="releaseYear" value="<%= movie.releaseYear %>" required />

    <label for="genre">Genre:</label>
    <select id="genre" name="genre" required>
      <option value="Science Fiction" <%= movie.genre === "Science Fiction" ? "selected" : "" %>>Science Fiction</option>
      <option value="Crime" <%= movie.genre === "Crime" ? "selected" : "" %>>Crime</option>
      <option value="Drama" <%= movie.genre === "Drama" ? "selected" : "" %>>Drama</option>
      <option value="Thriller" <%= movie.genre === "Thriller" ? "selected" : "" %>>Thriller</option>
      <option value="Action" <%= movie.genre === "Action" ? "selected" : "" %>>Action</option>
      <option value="Comedy" <%= movie.genre === "Comedy" ? "selected" : "" %>>Comedy</option>
      <option value="Fantasy" <%= movie.genre === "Fantasy" ? "selected" : "" %>>Fantasy</option>
      <option value="Adventure" <%= movie.genre === "Adventure" ? "selected" : "" %>>Adventure</option>
    </select>

    <label for="isPopular">Populair:</label>
    <select id="isPopular" name="isPopular">
      <option value="true" <%= movie.isPopular ? "selected" : "" %>>Ja</option>
      <option value="false" <%= !movie.isPopular ? "selected" : "" %>>Nee</option>
    </select>

    <button type="submit">Opslaan</button>
  </form>
</div>
</main>
<%- include('partials/footer') %>